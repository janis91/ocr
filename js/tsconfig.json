{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": ".",
    "removeComments": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}